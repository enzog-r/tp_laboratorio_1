#include <stdio.h>
#include <stdlib.h>
#include "funciones.h"




int main()
{
    setbuf(stdout, NULL);
    char salir = 'n';
    int flagKm = 0,
    	flagAero = 0,
		flagLat = 0;

    do
    {
        switch (menu())
        {
        case 1:
            printf("Opcion 1!!!\n");
            break;
        case 2:
            printf("Opcion 2!!!\n");
            break;
        case 3:
            printf("Opcion 3!!!\n");
            break;
        case 4:

            break;
        case 5:
            break;
        case 6:
            confirmar(&salir);
            break;
        default:
            printf("Opcion invalida");
        }
    } while (salir != 's');

    return 0;
}
